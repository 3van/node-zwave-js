{
	"typescript.tsdk": "node_modules\\typescript\\lib",
	"jest.showCoverageOnLoad": true,
	"jest.enableCodeLens": true,
	"jest.pathToJest": "npm run test:ts --",
	"eslint.enable": true,
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"[typescript]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		}
	},
	"files.exclude": {
		"node_modules/": false,
		"coverage/": false,
		".*": false,
		"**/node_modules/": false,
		"**/*.test.js": false,
		".nyc_output": false,
		"**/coverage/": false,
		"**/*.map": false,
		"**/zwave-js-*.tgz": false,
		"cache": false,
		"build": false,
		"*.d.ts": false,
		"*.map": false,
		"CommandClass.js": false,
		"Controller.js": false,
		"Driver.js": false,
		"Error.js": false,
		"Node.js": false,
		"Values.js": false,
		"index.js": false
	},
	"files.associations": {
		"**/config/**/*.json": "jsonc"
	},
	"editor.rulers": [72, 80, 120]
}
