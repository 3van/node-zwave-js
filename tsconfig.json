{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "outDir": "build/",
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        // "sourceMap": true,
        "inlineSourceMap": false,
        "stripInternal": true,
        "target": "es2015",
        "skipLibCheck": true,
        // This is incompatible with serialize/deserialize
        // "strictPropertyInitialization": true,
        // "strictNullChecks": true,
        "watch": false, // true breaks circleci
        "pretty": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "build/**",
        "node_modules/**"
    ]
}
